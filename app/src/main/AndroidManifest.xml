<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lz.sample.android_constraintlayout_sample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BasicAttrActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CompareWithRelativeLayoutActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SetSizeAsARatioActivity"
            android:label="@string/title_activity_set_size_as_aratio" />
        <activity
            android:name=".ChainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>